<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="395dp"
    android:layout_height="80dp"
    android:layout_margin="16dp"
    android:background="@drawable/layout_bg">


    <ImageView
        android:id="@+id/hat"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/straightLine"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/hat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/helveticaneuelt75bold"
        android:text="#22"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/straightLine"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/underLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/straightLine" />

    <TextView
        android:layout_width="174dp"
        android:layout_height="37dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/helveticaneuelt55roman"
        android:text="ვის ბურგერი საბურთალო"
        app:layout_constraintStart_toEndOf="@+id/straightLine"

        app:layout_constraintTop_toBottomOf="@id/textView" />

    <ImageView
        android:id="@+id/preparingBold"
        android:layout_width="17dp"
        android:layout_height="12dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/amount"

        android:layout_width="16dp"
        android:layout_height="20dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/helveticaneuelt75bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/preparingBold" />

    <ImageView
        android:id="@+id/shortLine"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/amount" />

    <TextView
        android:id="@+id/price"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/helveticaneuelt75bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/shortLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="30dp"
        android:text="j"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/price" />

</androidx.constraintlayout.widget.ConstraintLayout>